<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.budget</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="priority" eval="80"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_ebay']" position="after">
                <h2 class="mt32">Budget Management</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="month_selection"/>
                            <div class="text-muted">
                                Set Last Month for create Budget Management.
                            </div>
                            <div class="text-muted">
                                <field name="month_selection"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
