<?xml version="1.0" encoding="UTF-8" ?>
<odoo noupdate="1">
    <record id="sale_budget_creation_cron_job" model="ir.cron">
        <field name="name">Sale Budget: Sale Budget Creation</field>
        <field name="model_id" ref="sale_subscription.model_sale_subscription"/>
        <field name="state">code</field>
        <field name="code">model._create_sale_budget()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="True"/>
    </record>

    <record id="sale_budget_line_change_state" model="ir.cron">
        <field name="name">Sale Budget line: Sale Budget line change state</field>
        <field name="model_id" ref="clx_budget_management.model_sale_budget_line"/>
        <field name="state">code</field>
        <field name="code">model._change_state_sale_budget_line()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="True"/>
    </record>
</odoo>
