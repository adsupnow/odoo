<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="sale_subscription_view_form_inherited_clx_invoice_policy" model="ir.ui.view">
        <field name="name">sale.subscription.form.view</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='recurring_invoice_line_ids']/tree/field[@name='price_unit']"
                   position="before">
                <field name="is_prorate"/>
                <field name="prorate_amount"/>
            </xpath>
        </field>
    </record>
</odoo>