<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="generate_invoice_date_range_form_view" model="ir.ui.view">
        <field name="name">generate.invoice.date.range.form.view</field>
        <field name="model">generate.invoice.date.range</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Generate Invoice" name="generate_invoice" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_generate_invoice_date_range" model="ir.actions.act_window">
        <field name="name">Generate Invoice With Date Range</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generate.invoice.date.range</field>
        <field name="view_mode">form</field>
    </record>
</odoo>