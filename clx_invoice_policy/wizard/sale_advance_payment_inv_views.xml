<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to add custom fields -->
    <record id="clx_invoice_policy_view_sale_advance_payment_inv" model="ir.ui.view">
        <field name="name">clx.invoice.policy.views.sale.advance</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group" position="after">
                <group>
                    <field name="is_advanced" invisible="True"/>
                    <field name="invoice_selection"
                           widget="radio"
                           />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
