<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Email template -->
    <record model="ir.ui.view" id="account_invoice_send_wizard_form_inherit_id">
        <field name="name">account.invoice.send.form.inherit</field>
        <field name="model">account.invoice.send</field>
        <field name="inherit_id" ref="account.account_invoice_send_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ids']" position="replace">
                <field name="allowed_partner_ids" invisible="1" />
                <field name="partner_ids" widget="many2many_tags_email" placeholder="Add contacts to notify..." domain="[('id', 'in', allowed_partner_ids)]" options="{'no_create': True}"/>
                <field name="reply_to" placeholder="Send copy ...   "  invisible="1"/>
                <field name="email_to" placeholder="Add additional e-mails to notify..." />
            </xpath>
            <!-- Print option will not work  -->
            <xpath expr="//footer/button[@name='send_and_print_action' and contains(@class,'send_and_print')]" position="replace">
                <button string="Send"
                        attrs="{'invisible': ['|', ('is_email', '=', False), ('is_print', '=', False)]}"
                        name="clx_action_send_mail" type="object" class="btn-primary o_mail_send"/>
            </xpath>
            <xpath expr="//footer/button[@name='send_and_print_action' and contains(@class,'send')]" position="replace">
                <button string="Send"
                        attrs="{'invisible': ['|', ('is_print', '=', True), ('is_email', '=', False)]}"
                        name="clx_action_send_mail" type="object" class="btn-primary o_mail_send"/>
            </xpath>
            <xpath expr="//footer/button[@name='send_and_print_action' and contains(@class,'print')]" position="replace">
                <button string="Send"
                        attrs="{'invisible': ['|', ('is_print', '=', False), ('is_email', '=', True)]}"
                        name="clx_action_send_mail" type="object" class="btn-primary o_mail_send"/>
            </xpath>
        </field>
    </record>
</odoo>