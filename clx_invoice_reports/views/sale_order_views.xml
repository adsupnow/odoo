<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="view_order_form_inherit_clx_invoice_reports" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">             
            <xpath expr="//button[@name='action_quotation_send']" position="replace">
            </xpath>
            <xpath expr="//button[@name='action_quotation_send']" position="replace">
            </xpath>
            <xpath expr="//button[@name='action_quotation_send']" position="replace">
            </xpath>
            <xpath expr="//button[@name='action_quotation_send']" position="replace">
                <button name="sale_order_email_action" type="object" string="Send E-mail"/>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="contract_length"/>
                <field name="intended_launch_date"/>
                <!--<field name="setup_fee"/>-->
            </xpath>
        <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="partner_id"
                       widget="res_partner_many2one"
                       context="{
                            'res_partner_search_mode': 'company',
                            'show_address' : True,
                            'show_vat': True
                       }"
                       options="{
                            'no_create_edit' : True
                           }"
                    />
            </xpath>
        </field>
    </record>
</odoo>