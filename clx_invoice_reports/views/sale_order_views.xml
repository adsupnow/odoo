<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="view_order_form_inherit_clx_invoice_reports" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='date_order']" position="after">
                <field name="contract_length"/>
                <field name="intended_launch_date"/>
                <!--<field name="setup_fee"/>-->
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="partner_id"
                       widget="res_partner_many2one"
                       context="{
                       'default_company_type': 'company',
                       'res_partner_search_mode': 'company',
                       'show_vat': True
                       }"
                       options="{'no_quick_create': True}"
                />
                <!-- Options for create edit buttons in autocomplete
                    no_quick_create - remove Create [client name] option.
                    no_create_edit - remove all Create Edit options.
                    no_create - no_quick_create and no_create_edit combined.
                -->
            </xpath>

        </field>
    </record>
</odoo>