<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="product_category_form_view_inherit">
        <field name="name">product.category.form</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <group name="first" position="after">
                <group>
                    <group name="sale_pricelist" string="Price">
                        <field name="pricing_type"/>
                        <field name="retail"/>
                        <field name="wholesale"
                               attrs="{'invisible': [('pricing_type', '=', 'flat_cost')]}"/>
                        <field name="management_fee"
                               attrs="{'invisible': [('pricing_type', '!=', 'percentage_management_fee')]}"/>
                    </group>
                </group>
            </group>
        </field>
    </record>
</odoo>
