<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_retail_pricelist" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.retail.pricelist</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_cancel" position="after">
                <button name="update_price" type="object" string="Update Management Fees"/>
            </button>
            <field name="sale_order_template_id" position="after">
                <field name="display_management_fee"/>
            </field>
            <notebook position="inside">
                <page string="Product Price" name="product_price">
                    <field name="product_price_calculation_ids">
                        <tree string="Product Price" editable="bottom">
                            <field name="product_id"/>
                            <field name="management_fees"/>
                            <field name="retail_fees"/>
                            <field name="wholesale"/>
                        </tree>
                    </field>
                </page>
            </notebook>
            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="management_price" invisible="0"/>
                <field name="wholesale_price" invisible="0"/>
            </xpath>
        </field>
    </record>
</odoo>
