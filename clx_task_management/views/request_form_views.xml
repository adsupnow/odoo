<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Form View-->
    <record id="request_form_form_view" model="ir.ui.view">
        <field name="name">request.form.view</field>
        <field name="model">request.form</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit_form" states="draft" string="Submit"
                            type="object"
                            class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o" name="open_project_main_task_kanban_view"
                                string="Project">
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" required="1"/>
                            <field name="request_date"/>
                        </group>
                        <group>
                            <field name="description" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Line Item Details" name="line_item_details">
                            <field name="request_line" widget="section_and_note_one2many">
                                <tree editable="bottom">
                                    <field name="req_type" required="1"/>
                                    <field name="task_id" required="1"
                                           domain="[('req_type', '=', req_type)]"/>
                                    <field name="description" required="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="req_type"/>
                                        <field name="task_id"/>
                                        <field name="description"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--Tree View-->
    <record id="request_form_tree_view" model="ir.ui.view">
        <field name="name">request.tree.view</field>
        <field name="model">request.form</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="request_date"/>
            </tree>
        </field>
    </record>
    <!--View Action-->
    <record id="action_request_form" model="ir.actions.act_window">
        <field name="name">Request Form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">request.form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Menu -->
    <menuitem id="menu_request_form"
              name="Request Form"
              parent="sale.sale_order_menu" action="action_request_form"
              sequence="10"/>
</odoo>