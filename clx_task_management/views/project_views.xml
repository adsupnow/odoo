<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_project_kanban_inherit_clx_task_management" model="ir.ui.view">
        <field name="name">view_project_inherit_kanban</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban//templates//t//div//div[hasclass('o_primary')]" position="after">
                <div>
                    <strong>
                        <span>Salesperson :</span>
                    </strong>
                    <field name="user_id"/>
                    <br/>
                    <strong>
                        <span>Project Manager :</span>
                    </strong>
                    <field name="clx_project_manager_id"/>
                    <br/>
                    <strong>
                        <span>Designer :</span>
                    </strong>
                    <field name="clx_project_designer_id"/>
                </div>
            </xpath>
        </field>
    </record>


    <!-- Inherit Form View to add state for the project it -->
    <record id="edit_project_inherit_clx_project_management" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Ads Link" name="ads_link">
                    <group>
                        <field name="project_ads_link_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="link"/>
                            </tree>
                        </field>
                    </group>
                </page>
                <page name="extra_details" string="Extra Info">
                    <group>
                        <field name="management_company_type_id"/>
                        <field name="google_analytics_cl_account_location"/>
                        <field name="cs_notes"/>
                        <field name="ops_notes"/>
                        <field name="cat_notes"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//header" position="inside">
                <field name="clx_state" widget="statusbar"/>
                <button type="object" name="action_done_project" class="oe_stat_button"
                        string="Done" attrs="{'invisible': [('clx_state', '=', 'done')]}"/>
            </xpath>
            <field name="partner_id" position="after">
                <field name="clx_sale_order_ids" widget="many2many_tags"/>
                <field name="clx_project_manager_id" domain="[('share','=',False)]"/>
                <field name="clx_project_designer_id" domain="[('share','=',False)]"/>
            </field>
            <field name="message_follower_ids" position="after">
                <field name="message_ids" widget="mail_thread"/>
            </field>
            <xpath expr="//group[@name='misc']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <field name="user_id" position="attributes">
                <attribute name="string">Salesperson</attribute>
            </field>
        </field>
    </record>

    <!-- Inherit Form View to added custom fields it -->
    <record id="view_task_form2_inherit_clx_task_management" model="ir.ui.view">
        <field name="name">project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <field name="project_id" position="before">
                <field name="partner_id"/>
                <field name="vertical"/>
                <field name="account_user_id"/>
                <field name="website"/>
            </field>
            <field name="date_deadline" position="attributes">
                <attribute name="string">Launch Date</attribute>
            </field>
            <xpath expr="//page[@name='extra_info']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <button type="object" name="action_view_cancel_task" class="oe_stat_button"
                        string="Cancel"/>
            </xpath>
            <xpath expr="//button[@name='action_open_parent_task']" position="after">
                <field name="clx_sale_order_id" invisible="1"/>
                <button type="object" name="action_view_clx_so" class="oe_stat_button" icon="fa-dollar"
                        string="Sales Order" attrs="{'invisible': [('clx_sale_order_id', '=', False)]}"/>
            </xpath>
            <field name="user_id" position="after">
                <field name="req_type" widget="radio" attrs="{'invisible' : [('parent_id', '!=', False)]}"/>
                <field name="repositary_task_id"
                       attrs="{'invisible' : ['|', ('parent_id', '!=', False), ('id', '=', False)]}"
                       domain="[('req_type','=',req_type)]"
                />
                <field name="sub_repositary_task_ids" widget="many2many_tags"
                       attrs="{'invisible' : ['|', ('parent_id', '=', False), ('id', '=', False)]}"/>
                <field name="clx_task_manager_id"/>
                <field name="clx_task_designer_id" domain="[('share','=',False)]"/>
                <field name="team_id"/>
                <field name="team_members_ids" widget="many2many_tags"/>
            </field>
            <xpath expr="//page[@name='description_page']" position="after">
                <page name="sub_task" string="Sub Task"
                      attrs="{'invisible' : ['|', ('parent_id', '!=', False), ('id', '=', False)]}">
                    <field name="clx_sub_task_ids">
                        <tree>
                            <field name="sub_task_name" readonly="1"/>
                            <field name="team_id" readonly="1"/>
                            <field name="team_members_ids" widget="many2many_tags" readonly="1"/>
                            <field name="stage_id" readonly="1"/>
                        </tree>
                        <form>
                            <sheet>
                                <div class="oe_button_box" name="button_box">
                                    <button name="open_parent_task" type="object" string="Parent Task"
                                            class="oe_stat_button">
                                    </button>
                                </div>
                                <div class="oe_title">
                                    <h1>
                                        <field name="name" readonly="1"/>
                                    </h1>
                                </div>
                                <group>
                                    <group>
                                        <field name="sub_task_name" readonly="1"/>
                                        <field name="dependency_ids" widget="many2many_tags" readonly="1"/>
                                        <field name="parent_id" readonly="1"/>
                                        <field name="team_id" readonly="1"/>
                                        <field name="sequence" readonly="1"/>
                                        <field name="task_id" readonly="1"/>
                                        <field name="stage_id" readonly="0"
                                               context="{'write_from_compute_field': True}"
                                               attrs="{'readonly': [('task_id', '=', False)]}"
                                        />
                                    </group>
                                    <group>
                                        <field name="team_members_ids" widget="many2many_tags"
                                        attrs="{'readonly': [('task_id', '=', False)]}"/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
                <page name="requirements" string="Requirements">
                    <group>
                        <field name="requirements"/>
                    </group>
                </page>
                <page name="extra_details" string="Extra Info">
                    <group>
                        <field name="management_company_type_id"/>
                        <field name="google_analytics_cl_account_location"/>
                        <field name="cs_notes"/>
                        <field name="ops_notes"/>
                        <field name="cat_notes"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="project.project_task_action_from_partner" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="project.view_task_search_form"/>
        <field name="domain">[('parent_id','!=',False)]</field>
    </record>

    <!--inherit search view for add group by team -->
    <record id="view_task_search_form_inherit_clx_task_management" model="ir.ui.view">
        <field name="name">project.task.search.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="team_id"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="Team" name="team" domain="[]" context="{'group_by':'team_id'}"/>
            </xpath>
        </field>
    </record>

    <!--override action because of  show only parent task on when action is call -->
    <record id="project.act_project_project_2_project_task_all" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph,activity</field>
        <field name="context">{
            'pivot_row_groupby': ['user_id'],
            'search_default_project_id': [active_id],
            'default_project_id': active_id,
            }
        </field>
        <field name="search_view_id" ref="project.view_task_search_form"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click <i>Create</i> to start a new task.
            </p>
            <p>
                To get things done, use activities and status on tasks.
                <br/>
                Chat in real time or by email to collaborate efficiently.
            </p>
        </field>
        <field name="domain">[('parent_id','=',False)]</field>
    </record>

    <record id="project.action_view_task" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph,activity</field>
        <field name="context">{'search_default_my_tasks': 1,'search_default_team' : 1}</field>
        <field name="search_view_id" ref="project.view_task_search_form"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new task
            </p>
            <p>
                Odoo's project management allows you to manage the pipeline of your tasks efficiently.
                <br/>
                You can track progress, discuss on tasks, attach documents, etc.
            </p>
        </field>
        <field name="domain">[('parent_id','!=',False)]</field>
    </record>
</odoo>