<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--subtask for Email Launch -->
    <record id="email_sub_task_1" model="sub.task">
        <field name="sub_task_name">Confirm client asset or messaging preferences that might supplement questionnaire.
        </field>
        <field name="parent_id" ref="clx_task_management.clx_email_task"/>
        <field name="dependency_ids" eval="[(4, ref('clx_task_management.clx_client_launch_sub_task_1'))]"/>
        <field name="team_id" ref="clx_task_management.clx_sales_team"></field>
    </record>
    <record id="email_sub_task_2" model="sub.task">
        <field name="sub_task_name">Write ad copy and determine layout for the Email blast.
        </field>
        <field name="parent_id" ref="clx_task_management.clx_email_task"/>
        <field name="dependency_ids" eval="[(4, ref('clx_task_management.clx_client_launch_sub_task_1'))]"/>
        <field name="team_id" ref="clx_task_management.clx_cs_team"></field>
    </record>

    <record id="email_sub_task_3" model="sub.task">
        <field name="sub_task_name">Design and provide Email blast media to requested specifications; send test email.
        </field>
        <field name="parent_id" ref="clx_task_management.clx_email_task"/>
        <field name="dependency_ids" eval="[(4, ref('clx_task_management.email_sub_task_2'))]"/>
        <field name="team_id" ref="clx_task_management.clx_cat_team"></field>
    </record>
    <record id="email_sub_task_4" model="sub.task">
        <field name="sub_task_name">Gain client's approval on Email blast media; request prospect list if not previously
            provided.
        </field>
        <field name="parent_id" ref="clx_task_management.clx_email_task"/>
        <field name="dependency_ids" eval="[(4, ref('clx_task_management.email_sub_task_3'))]"/>
        <field name="team_id" ref="clx_task_management.clx_cs_team"></field>
    </record>
    <record id="email_sub_task_5" model="sub.task">
        <field name="sub_task_name">Use Zerobounce to scrub the client's provided prospect list.
        </field>
        <field name="parent_id" ref="clx_task_management.clx_email_task"/>
        <field name="dependency_ids" eval="[(4, ref('clx_task_management.email_sub_task_4'))]"/>
        <field name="team_id" ref="clx_task_management.clx_cs_team"></field>
    </record>
    <record id="email_sub_task_6" model="sub.task">
        <field name="sub_task_name">Add internal contacts to the scrubbed prospect list; upload to Emma; schedule the
            Email blast.
        </field>
        <field name="parent_id" ref="clx_task_management.clx_email_task"/>
        <field name="dependency_ids" eval="[(4, ref('clx_task_management.email_sub_task_5'))]"/>
        <field name="team_id" ref="clx_task_management.clx_cs_team"></field>
    </record>
    <record id="email_sub_task_7" model="sub.task">
        <field name="sub_task_name">Issue a performance report on the business day following the send.
        </field>
        <field name="parent_id" ref="clx_task_management.clx_email_task"/>
        <field name="dependency_ids" eval="[(4, ref('clx_task_management.email_sub_task_6'))]"/>
        <field name="team_id" ref="clx_task_management.clx_cs_team"></field>
    </record>
</odoo>