<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_followers" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.followers</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='languages']" position="after">
                <h2>Not Send Auto Mail to Followers</h2>
                <div class="row mt16 o_settings_container" id="auto_create_sub_task">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_send_auto_mail"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_send_auto_mail"/>
                            <div class="text-muted">
                                <p>By enable checkbox Auto Mail is not send to all followers.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>