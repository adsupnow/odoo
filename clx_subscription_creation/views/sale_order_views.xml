<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit Form View for add start date and end date field on sale order line -->
    <record id="view_order_form_inherited_clx_subscription_creation" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherited.clx.subscription.creation</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="start_date" required="1"/>
                <field name="end_date"/>
                <field name="line_type" invisible="True"/>
            </xpath>
        </field>
    </record>
</odoo>
