<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_contact_type_clx_form" model="ir.ui.view">
        <field name="name">view.contact.type.clx.form</field>
        <field name="model">contact.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="nik"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_res_partner_clx_child_tree" model="ir.ui.view">
        <field name="name">view.res.partner.clx.child.tree</field>
        <field name="model">res.partner.clx.child</field>
        <field name="arch" type="xml">
            <tree>
                <field name="parent_id"/>
                <field name="child_id"/>
                <field name="contact_type_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_res_partner_clx_child_form" model="ir.ui.view">
        <field name="name">view.res.partner.clx.child.form</field>
        <field name="model">res.partner.clx.child</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="parent_id" options="{'no_create_edit':True}"/>
                            <field name="child_id" options="{'no_create_edit':True}"/>
                        </group>
                        <group>
                            <field name="contact_type_ids" widget="many2many_tags" options="{'no_create_edit':True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_partner_child_parent" model="ir.actions.act_window">
        <field name="name">Partner Child</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner.clx.child</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="action_partner_child_parent"
              id="menu_partner_child_parent"
              sequence="100"
              parent="contacts.res_partner_menu_config"/>
</odoo>
